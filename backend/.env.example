# Nana's Bites â€” production environment template
# Copy to .env and set values. Never commit .env.

# Django
DJANGO_SECRET_KEY=your-secret-key-min-50-chars
DJANGO_DEBUG=0
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database (PostgreSQL)
DB_NAME=nanas_bites
DB_USER=nanas_bites_user
DB_PASSWORD=secure-db-password
DB_HOST=127.0.0.1
DB_PORT=5432

# CORS (frontend origin)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security (production behind HTTPS proxy)
SECURE_SSL_REDIRECT=1

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Checkout (optional)
CHECKOUT_TAX_RATE=0.17
CHECKOUT_SHIPPING_FIXED=15

# JWT
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# Throttling
THROTTLE_ANON=100/hour
THROTTLE_USER=200/hour
THROTTLE_AUTH=10/hour

# Logging
LOG_LEVEL=INFO

# Sentry (optional; leave empty to disable)
SENTRY_DSN=

# Email (for ADMINS error notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
SERVER_EMAIL=noreply@yourdomain.com
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMINS=Admin Name,admin@yourdomain.com
